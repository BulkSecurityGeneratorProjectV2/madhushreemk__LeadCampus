<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical" >


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal" >

   <!-- <TextView
        android:id="@+id/LeadId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@android:color/white"
        android:layout_weight="1"
        android:text="LeadId" />-->

    <TextView
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@android:color/black"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="Name" />

    <TextView
        android:id="@+id/ProjectTittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@android:color/black"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="Project Tittle" />

    <TextView
        android:id="@+id/ApprovedAmt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@android:color/black"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="ApprovedAmt" />
    <TextView
        android:id="@+id/DisperseAmt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@android:color/black"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="DisperseAmt" />
    <TextView
        android:id="@+id/BalanceAmt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@android:color/black"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="BalanceAmt" />

</LinearLayout>

 <View
     android:layout_width="match_parent"
     android:layout_marginTop="3dp"
     android:layout_height="1dp"
     android:background="#c0c0c0"/>
</LinearLayout>