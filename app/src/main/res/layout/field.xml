<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lnrlyt_teammembers"
    android:paddingTop="20dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_memberName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorBlack"
        android:textColor="@color/colorBlack"
        >

        <EditText
            android:id="@+id/edt_memberName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_line"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:textColorHint="@color/colorBlack"
            android:textSize="15sp"
            android:hint="Member Name"
            android:inputType="textPersonName|textMultiLine"
            android:textColor="@color/colorBlack"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_memberMailId"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColorHint="@color/colorBlack"
        android:textColor="@color/colorBlack"
        >

        <EditText
            android:id="@+id/edt_memberMailId"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_line"
            android:textColorHint="@color/colorBlack"
            android:inputType="textEmailAddress|textMultiLine"
            android:hint="e-mail id"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"/>

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/delete_button_member"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:background="@android:drawable/ic_delete">
    </Button>


    <!--    <Button
            android:id="@+id/delete_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:drawable/ic_delete">
        </Button>-->

</LinearLayout>

