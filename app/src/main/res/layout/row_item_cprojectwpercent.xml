<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/slno_holder_TV"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:layout_weight = "3"
            android:gravity = "center"
            android:textSize="11sp"
            android:text = "01."
            android:visibility="gone"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            />

        <!--        <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#c0c0c0"/>-->

        <!--  <TextView
              android:id="@+id/txt_projType"
              android:layout_width = "0dp"
              android:layout_height = "match_parent"
              android:layout_weight = "2"
              android:textSize="8sp"
              android:gravity = "center"
              android:text = ""
              android:textAlignment="center"
              android:textColor="#ffffff"
              />
      -->
        <!-- <TextView
             android:id="@+id/txt_amountApp"
             android:layout_width = "0dp"
             android:layout_height = "match_parent"
             android:layout_weight = "2"
             android:gravity = "center"
             android:padding = "5dp"
             android:lines="4"
             android:text = ""
             android:textAlignment="center"
             android:textColor="#ffffff"
             />-->

        <TextView
            android:id="@+id/projecttitle_name_holder_TV"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:layout_weight = "2"
            android:gravity = "center"
            android:textSize="11sp"
            android:text = ""
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            />


        <TextView
            android:id="@+id/projectcompletion_holder_no_tv"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:layout_weight = "3"
            android:gravity = "right"
            android:textSize="11sp"
            android:text = ""
            android:textColor="@color/colorBlack"
            />

        <ProgressBar
            android:id="@+id/projectcompletion_progressbar_holder_pg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:visibility="visible"
            android:gravity = "left"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:max="100" />


        <TextView
            android:id="@+id/project_id_holder_TV"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:layout_weight = "2"
            android:gravity = "right"
            android:textSize="11sp"
            android:text = ""
            android:visibility="gone"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/project_completion_count_holder_TV"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:layout_weight = "2"
            android:gravity = "right"
            android:textSize="11sp"
            android:text = ""
            android:visibility="gone"
            android:textColor="@color/colorBlack"
            />


        <ImageView
            android:id="@+id/projstatus_completion_holder_iv"
            android:layout_width = "match_parent"
            android:layout_weight="2"
            android:layout_height = "wrap_content"
            android:visibility="gone"
            android:gravity = "center"
            android:text = ""
            android:src="@drawable/requestedneww"
            android:textColor="@color/colorBlack"
            />


        <TextView
            android:id="@+id/projectstatus_completion_holder_tv"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:layout_weight = "2"
            android:gravity = "right"
            android:textSize="9dp"
            android:text = ""
            android:visibility="gone"
            android:textColor="@color/colorBlack"
            />



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>


</LinearLayout>






























