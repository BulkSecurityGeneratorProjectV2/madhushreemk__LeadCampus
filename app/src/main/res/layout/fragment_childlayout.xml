<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/req_history_LL">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/RequestMsglabel_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="center_horizontal"
                android:text="Requested Message"
                android:textColor="@color/light_gray"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/requestmsg_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/dark_black_red"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/requestTypelabel_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="center_horizontal"
                android:text="Requested Type"
                android:textColor="@color/light_gray"
                android:textSize="14dp"
                />


            <TextView
                android:id="@+id/requestType_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/dark_black_red"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/respmsg_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/ResponseMsglabel_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="center_horizontal"
                android:text="Mentor Reply"
                android:textColor="@color/light_gray"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/ResponseMsg_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/dark_black_red"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/request_dateactionlabel_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="center_horizontal"
                android:text="Requested Date"
                android:textColor="@color/light_gray"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/request_dateaction_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/dark_black_red"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"/>



        </LinearLayout>


        <LinearLayout
            android:id="@+id/respdate_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/resp_dateactionlabel_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="center_horizontal"
                android:text="Reply Date"
                android:textColor="@color/light_gray"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/resp_dateaction_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/dark_black_red"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"/>



        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/projectidlabel_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="center_horizontal"
                android:text="Project ID"
                android:textColor="@color/light_gray"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/projectid_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/dark_black_red"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

            <LinearLayout
                android:id="@+id/protitle_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:id="@+id/projectTitlelabel_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="center_horizontal"
                    android:text="Project Title"
                    android:textColor="@color/light_gray"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/projectTitle_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/dark_black_red"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/Statuslabel_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="center_horizontal"
                android:text="Status"
                android:textColor="@color/light_gray"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/Status_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/dark_black_red"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

        <TextView
            android:id="@+id/reqid_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="text"
            android:textColor="#000"
            android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/reqstatus_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="text"
            android:textColor="#000"
            android:textSize="20sp"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/headid_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="text"
            android:textColor="#000"
            android:textSize="20sp"
            android:visibility="gone"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/nohistory_LL">
        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="Currently No  History"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />

    </LinearLayout>


    <Button
        android:id="@+id/delete_BT"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Delete"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        android:textAlignment="center"
        android:gravity="center"
        android:padding="5dp"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/vivid_cyan"
        />


</LinearLayout>